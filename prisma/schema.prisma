// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       Profile?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id               String   @id @default(cuid())
  user_id          String?  @unique
  emp_id           String?  @unique
  email            String?  @unique
  first_name       String?
  last_name        String?
  date_of_birth    String?
  date_of_join     DateTime @default(now())
  mobile_num       String?  @unique
  personal_email   String?  @unique
  manager          String?
  notice_period    Int?     @default(3)
  leaves_per_month Float?   @default(2)
  editable         Boolean  @default(true)
  last_updated_at  DateTime @updatedAt


  User          User?         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  department    Department?   @relation(fields: [department_id], references: [id])
  project       Project?      @relation(fields: [project_id], references: [id])
  designation   Designation?  @relation(fields: [designation_id], references: [id])
  work_location WorkLocation? @relation(fields: [workLocation_id], references: [id])
  address       Address?      @relation(fields: [address_id], references: [id])

  department_id   String?
  project_id      String?
  designation_id  String?
  workLocation_id String?
  address_id      String?
}

model WorkLocation {
  id       String @id @default(cuid())
  location String @unique

  profile Profile[]
}

model Department {
  id   String @id @default(cuid())
  dept String @unique

  project Project[]
  profile Profile[]
}

model Project {
  id           String @id @default(cuid())
  project_name String @unique
  client_name  String
  department   String

  dept   Department @relation(fields: [department], references: [dept])
  client Client     @relation(fields: [client_name], references: [name])

  profile Profile[]
}

model Client {
  id   String @id @default(cuid())
  name String @unique

  Project Project[]
}

model Designation {
  id         String @id @default(cuid())
  desination String @unique

  profile Profile[]
}

model Address {
  id              String   @id @default(cuid())
  door_num        String
  add_line1       String
  add_line2       String?
  city            String
  state           String
  country         String
  zipcode         String
  last_updated_at DateTime @updatedAt

  profile Profile[]
}
